<div class="overlay"></div>

<div class="dialogs">

    <div class="modal-window modal-window--thanks" role="dialog" aria-modal="true">
        <div class="modal-window-container">
            <button class="modal-window__close"></button>
            <div class="modal-window__content">
                <span class="text-thank">Спасибо за заявку</span>
            </div>
        </div>
    </div>

    <div class="modal-window modal-window--added-to-cart" role="dialog" aria-modal="true">
        <div class="modal-window-container">
            <button class="modal-window__close"></button>
            <div class="modal-window__content">
                <div class="thank_title">Товар добавлен в корзину</div>
                {% do action('modal_cart_action') %}
                <div class="modal-buttons">
                    <div class="modal-close-button"><a href="">Продолжить покупки</a></div>
                    <div class="modal-order-button">
                        <a href="{{ site.link }}/cart">
                            <span>Оформить заказ</span>
                            <svg width="11" height="18" viewBox="0 0 11 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1 1L9 9L1 17" stroke="white" stroke-width="2"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>